{
  "$schema": "https://schema.tauri.app/config/2",
  "version": "1.0.0",
  "identifier": "xyz.shuflduf.guppy",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "dragDropEnabled": false,
        "alwaysOnTop": true,
        "preventOverflow": true,
        "title": "guppy",
        "width": 400,
        "height": 300
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
